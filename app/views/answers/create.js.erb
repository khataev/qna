<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').append('<%= j message %>' + '</br>');
  <% end %>
<% else %>
  <% publish_to "/questions/#{@question.id}/answers" do %>
    $('#answers-count').replaceWith('<%= j render 'answers/answers_count' %>');
    $('.answers-table').append('<%= j render @answer %>');
  <% end %>
  $('#new-answer-body').val('');


<% end %>