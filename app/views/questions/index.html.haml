.row
  .col-md-8
    .all_questions
      %h1 All Questions
.row
  .col-md-8
    #questions-count
      - if @questions.empty? || @questions.count == 0
        %p Currently no questions yet
      -else
        %p = "#{pluralize(@questions.count,'Question')}"
    %table.table.table-striped.questions-table
      - if @questions.count > 0
        - @questions.each do |question|
          %tr
            %td
              = link_to question.title, question
              %br
              .question_body
              = question.body
.row
  %p= link_to 'Ask question', new_question_path

= subscribe_to '/questions'
