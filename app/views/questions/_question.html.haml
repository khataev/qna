.col-md-8
  %h1
    = question.title
  .vote-area
    .vote-errors
    .vote-up
      - if user_signed_in?
        = link_to 'Vote for', vote_for_question_path(question), method: :patch, remote: true, id: 'link-vote-for', data: { hide: @question.voted_by?(current_user) }
      -#.glyphicon.glyphicon-triangle-top
    .vote-counter
      = @question.rating
    .vote-back
      - if user_signed_in?
        = link_to 'Vote back', vote_back_question_path(question), method: :patch, remote: true, id: 'link-vote-back', data: { hide: !@question.voted_by?(current_user) }
    .vote-down
      - if user_signed_in?
        = link_to 'Vote against', vote_against_question_path(question), method: :patch, remote: true, id: 'link-vote-against', data: { hide: @question.voted_by?(current_user) }
      -#.glyphicon.glyphicon-triangle-bottom
  .question_body
    = question.body
  = render 'attachments/attachments', attachable: @question

  - if author_of?(question)
    = link_to 'Edit', '', class: 'edit-question-link'
    = link_to 'Delete', question, method: :delete, data: { confirm: "Are you sure?" }

    %p
      = form_for question, remote: true, html: {id: 'edit-question-form'} do |f|
        .question-errors
        = f.label :title, 'Title'
        = f.text_field :title
        %br
        = f.label :body, 'Body'
        = f.text_area :body
        = f.submit 'Save'