- cache @question do
  .row.question-area{ id: "question-#{@question.id}"}
    = render 'question_show', question: @question, subscription: @subscription
  .row.question-comments-row{ id: "question-#{@question.id}-comments-row"}
    .col-md-1
    .col-md-7
      = render 'comments/comments', commentable: @question, comment: @comment
  .row.answers-area
    .col-md-8
      .answers
        = render 'answers/answer_list'

  - if user_signed_in?
    .row
      .col-md-8
        = render partial: 'answers/new_answer_form'

= subscribe_to "/questions/#{@question.id}/answers"
= subscribe_to "/questions/#{@question.id}/comments"


