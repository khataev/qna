        = link_to('Login', new_user_session_path)
        = link_to('Register', new_user_registration_path)

    .container

      = render 'search/form'

      %p.notice= notice
      %p.alert= alert
      -#.row
      -#  .col-md-8
      -#    - if flash[:notice]
      -#      .error
      -#        = flash[:notice]

      = yield

